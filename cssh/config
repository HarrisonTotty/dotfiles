# ~/.config/cssh/config
# Primary cssh (clusterssh) configuration file

# Set the auto-close time to 5 seconds
auto_close = 5

# Enable auto-quit
auto_quit = yes

# Reserve some space for tiling (if tiling in floating mode)
screen_reserve_top = 170
screen_reserve_bottom = 10
screen_reserve_left = 1
screen_reserve_right = 1

# Setup the terminal
terminal = /usr/bin/urxvtc
terminal_args = "+sb"
terminal_font = "-*-lemon-medium-r-normal-*-10-*-75-75-m-50-iso8859-1"
terminal_reserve_top = 20
terminal_reserve_bottom = 3
terminal_reserve_left = 3
terminal_reserve_right = 3
terminal_colorize = 0
terminal_title_opt = "-title"

# Set the title
title = CSSH